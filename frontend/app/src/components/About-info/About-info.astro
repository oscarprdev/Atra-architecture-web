---
import { getAboutInfo } from '../../services/get-about-info';
import Image from '../Image/Image.astro';
import { AboutInfo } from '../../types/about.type';

const { text, image }: AboutInfo = await getAboutInfo();
---

<section
    class="mt-20 flex h-screen w-[90vw] flex-col items-center gap-4 md:mt-0 md:flex-row md:gap-10"
>
    <figure class="overglow-hidden h-[20vh] shadow-lg md:h-[50vh] md:w-screen">
        <Image
            src={image}
            alt="About image"
        />
    </figure>
    <div class="flex flex-col items-start gap-4">
        {
            text.map((parragraph) => (
                <>
                    <p class="text-[18px]">{parragraph}</p>
                    <span class="h-[1px] w-[80px] bg-gradient-to-r from-transparent via-[var(--dark-smooth)] to-transparent" />
                </>
            ))
        }
    </div>
</section>
